<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="GLAMAZON"
        android:textAlignment="center"
        android:textColor="#D0356A"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atma_medium"
        android:text="@string/caption_text"
        android:textAlignment="center"
        android:layout_marginTop="85dp"
        android:textColor="#AE607B"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:text="Admin Panel"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:textColor="#AE607B"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:text="CATEGORY :"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="10dp"
        android:textColor="#AE607B"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/subcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:text="SUB CATEGORY :"
        android:layout_below="@+id/ll1"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="10dp"
        android:textColor="#AE607B"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:layout_below="@+id/category">

        <Button
            android:id="@+id/cat_add"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="ADD"/>

        <Button
            android:id="@+id/cat_update"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="UPDATE"/>

        <Button
            android:id="@+id/cat_delete"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="DELETE"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:layout_below="@+id/subcategory">

        <Button
            android:id="@+id/scat_add"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="ADD"/>

        <Button
            android:id="@+id/scat_update"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="UPDATE"/>

        <Button
            android:id="@+id/scat_delete"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="DELETE"/>

    </LinearLayout>

</RelativeLayout>